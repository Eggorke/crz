<h2>Редактирование пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :full_name, "Полное имя" %><br />
    <%= f.text_field :full_name, autofocus: true, autocomplete: "Полное Имя" %>
  </div>
  <div class="field">
    <%= f.label :organisation, "Организация" %><br />
    <%= select(:user, :organisation, ['Опытный Завод "УралНИИстром"', 'ООО ТехсервисВермикулит', 'ООО Стройвермикулит']) %>
  </div>

  <div class="field">
    <%= f.label :email, "Почта" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль" %> <i>(Оставить пустым если не хотите менять)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em> минимум символов <%= @minimum_password_length %> </em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Подтверждение пароля" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Актуальный пароль" %> <i>(для подтверждения изменений)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Принять" %>
  </div>
<% end %>

<h3>Удалить аккаунт</h3>

<p> <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Уверены?" }, method: :delete %></p>

<%= link_to "Назад", :back %>
